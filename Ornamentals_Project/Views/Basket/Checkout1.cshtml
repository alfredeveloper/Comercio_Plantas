
@{
    ViewBag.Title = "Checkout1";
}
@model Ornamentals_Project.Models.Cliente

<div id="content" onload="down();">
    <div class="container">

        <div class="col-md-12">
            <ul class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Home")">Home</a>
                </li>
                <li>Address</li>
            </ul>
        </div>

        <div class="col-md-9" id="checkout">

            <div class="box">
                <form method="post" action="@Url.Action("Checkout2","Basket")">
                    <h1>Address</h1>
                    <ul class="nav nav-pills nav-justified">
                        <li class="active">
                            <a href="#"><i class="fa fa-map-marker"></i><br>Address</a>
                        </li>
                        <li class="disabled">
                            <a href="#"><i class="fa fa-truck"></i><br>Modo de Envío</a>
                        </li>
                        <li class="disabled">
                            <a href="#"><i class="fa fa-money"></i><br>Modo de Pago</a>
                        </li>
                        <li class="disabled">
                            <a href="#"><i class="fa fa-eye"></i><br>Revisión del pedido</a>
                        </li>
                    </ul>

                    <div class="content">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="firstname">Nombres</label>
                                    <input type="text" class="form-control" id="firstname" value="@Model.Nombres">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="lastname">Apellidos</label>
                                    <input type="text" class="form-control" id="lastname" value="@Model.Apellidos">
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!--
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="company">Compañía</label>
                                    <input type="text" class="form-control" id="company">
                                </div>
                            </div>
                            -->
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label for="state">Provincia</label>
                                    <select class="form-control" id="state"></select>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label for="country">Distrito</label>
                                    <select class="form-control" id="country"></select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="street">Dirección</label>
                                    <input type="text" class="form-control" id="street" value="@Model.Direccion">
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->

                        <div class="row">
                            <!--
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label for="city">Company</label>
                                    <input type="text" class="form-control" id="city">
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-3">
                                <div class="form-group">
                                    <label for="zip">ZIP</label>
                                    <input type="text" class="form-control" id="zip">
                                </div>
                            </div>
                            -->
                              
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="text" class="form-control" id="email" value="@Model.Correo">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label for="phone">Teléfono</label>
                                    <input type="text" class="form-control" id="phone" value="@Model.Celular">
                                </div>
                            </div>

                        </div>
                        <!-- /.row -->
                    </div>

                    <div class="box-footer">
                        <div class="pull-left">
                            <a href="@Url.Action("Index","Basket")" class="btn btn-default"><i class="fa fa-chevron-left"></i>Volver a Carrito</a>
                        </div>
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">
                                Continuar<i class="fa fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box -->


        </div>
        <!-- /.col-md-9 -->

        <div class="col-md-3">
            <div class="box" id="order-summary">
                <div class="box-header">
                    <h3>Resumen del pedido</h3>
                </div>
                <p class="text-muted">El envío y los costes adicionales se calculan en función de los valores introducidos.</p>

                <div class="table-responsive">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Subtotal de Orden</td>
                                <th>$446.00</th>
                            </tr>
                            <tr>
                                <td>Envío y manipulación</td>
                                <th>$10.00</th>
                            </tr>
                            <tr>
                                <td>Impuestos</td>
                                <th>$0.00</th>
                            </tr>
                            <tr class="Total">
                                <td>Total</td>
                                <th>$456.00</th>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>


            <div class="box">
                <div class="box-header">
                    <h4>Código de Cupón</h4>
                </div>
                <p class="text-muted">Si tienes un código de cupón, ingresa en el cuadro de abajo.</p>
                <form>
                    <div class="input-group">

                        <input type="text" class="form-control">

                        <span class="input-group-btn">

                            <button class="btn btn-primary" type="button"><i class="fa fa-gift"></i></button>

                        </span>
                    </div>
                    <!-- /input-group -->
                </form>
            </div>

        </div>
        <!-- /.col-md-3 -->

    </div>
    <!-- /.container -->
</div>
<script src="~/js/jquery-1.11.0.min.js"></script>
<script>
    $(document).ready(function () {
        
        document.getElementById('content').onload = function(){
            $("#content").animate({ 'top': '+=500px' }, 10);
        }
    });
</script>

